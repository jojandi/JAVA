package sec01.exam01;

public class ForExam {

	public static void main(String[] args) {
		
		// 1씩 증가하는 걸 5번 반복
		// 1 + 1 + 1 + 1 + 1
		int sum = 0;
		sum += 1;	//sum++; sum = sum + 1
		sum += 1;
		sum += 1;
		sum += 1;
		sum += 1;
		System.out.println("sum : "+ sum);
		
		
		// 1 + 2 + 3 + 4 + 5 
		sum = 0;
		sum = sum + 1;
		sum = sum + 2;
		sum = sum + 3;
		sum = sum + 4;
		sum = sum + 5;
		System.out.println("sum : "+ sum);
		
		for(sum = 0; sum >= 5; sum++) {
			System.out.println("sum : "+ sum);
		}
		
	}

}
