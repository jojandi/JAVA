package sec01.exam01;

public class ForExam {

	public static void main(String[] args) {
		
		// 1씩 증가하는 걸 5번 반복
		// 1 + 1 + 1 + 1 + 1
		int sum = 0;
		sum += 1;	//sum++; sum = sum + 1
		sum += 1;
		sum += 1;
		sum += 1;
		sum += 1;
		System.out.println("sum : "+ sum);
		System.out.println("-----------------------");
		
		
		// 1 + 2 + 3 + 4 + 5 
		sum = 0;
		sum = sum + 1;
		sum = sum + 2;
		sum = sum + 3;
		sum = sum + 4;
		sum = sum + 5;
		System.out.println("sum : "+ sum);
		System.out.println("-----------------------");
		
		
		// 1, 2, 3...에 해당하는 걸 변수에 넣기
		sum = 0;
		int i = 1;
		sum = sum + i;	//+1
		i++;//2
		sum = sum + i;	//+2
		i++;//3
		sum = sum + i;	//+3
		
		
		sum = 0;
		for(i = 0; i <= 5; i++) {
			sum = sum + i;
			System.out.println("sum : "+ sum);
		}
		
	}

}
